{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended"
  ],
  "plugins": ["react", "import", "jsx-a11y"],
  "rules": {
    "semi": ["warn", "always"]
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
      "es6": true,
      "browser": true,
      "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}